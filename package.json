{
  "name": "collab-session",
  "displayName": "Collab Session",
  "description": "A VS Code extension for collaborative sessions with per-student code isolation.",
  "version": "0.0.1",
  "publisher": "your-name-or-org",
  "engines": {
    "vscode": "^1.85.0"
  },
  "icon": "resources/icon-64.png",
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onStartupFinished",
    "onCommand:collab-session.showHome",
    "onCommand:collab-session.createSession",
    "onCommand:collab-session.joinSession",
    "onCommand:collab-session.copySessionId",
    "onCommand:collab-session.leaveSession",
    "onCommand:collab-session.closeSession",
    "onCommand:collab-session.sendAnswer",
    "onCommand:collab-session.openStudentAnswer",
    "onCommand:collab-session.sendFeedback",
    "onView:collabSessionUsers",
    "onView:collabSessionAnswers",
    "onCommand:collab-session.showQuestion",
    "onCommand:collab-session.setHostIP"
  ],
  "contributes": {
    "commands": [
      {
        "command": "collab-session.showHome",
        "title": "Collab Session: Show Home"
      },
      {
        "command": "collab-session.createSession",
        "title": "Collab Session: Create Session"
      },
      {
        "command": "collab-session.joinSession",
        "title": "Collab Session: Join Session"
      },
      {
        "command": "collab-session.copySessionId",
        "title": "Collab Session: Copy Session ID"
      },
      {
        "command": "collab-session.leaveSession",
        "title": "Collab Session: Leave Session"
      },
      {
        "command": "collab-session.closeSession",
        "title": "Collab Session: Close Session (host)"
      },
      {
        "command": "collab-session.sendAnswer",
        "title": "Collab Session: Send My Answer"
      },
      {
        "command": "collab-session.openStudentAnswer",
        "title": "Collab Session: Open Student Answer"
      },
      {
        "command": "collab-session.sendFeedback",
        "title": "Collab Session: Send Feedback (host â†’ student)"
      },
      {
        "command": "collab-session.showQuestion",
        "title": "Collab Session: Show Question"
      },
      {
        "command": "collab-session.setHostIP",
        "title": "Collab Session: Set Host IP"
      },
      {
        "command": "collab-session.toggleQuestionSyncMode",
        "title": "Collab Session: Toggle Question Sync Mode"
      },
      { "command": "collab-session.openMyAnswer",
        "title": "Collab Session: Open My Answer" 
      },
      {
        "command": "collab-session.sendAnswerFromFile",
        "title": "Collab Session: Send File as Answer (student)"
      },
      {
        "command": "collab-session.loadQuestionFromFile",
        "title": "Collab Session: Load Question From File (host)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "collabSession",
          "title": "Collab",
          "icon": "resources/icon-32.png"
        }
      ]
    },
    "views": {
      "collabSession": [
        {
          "id": "collabSessionAnswers",
          "name": "Answers"
        }
      ],
      "explorer": [
        {
          "id": "collabSessionUsers",
          "name": "Connected Users"
        }
      ]
    },
    "configuration": {
      "title": "Collab Session",
      "properties": {
        "collab.hostIP": {
          "type": "string",
          "default": "localhost",
          "description": "Host IPv4 or WSS URL for the Collab Session server (e.g. 192.168.1.187 or wss://your-ngrok-domain).",
          "type": "boolean",
          "default": true,
          "description": "If true: send question updates only when host saves the doc (Ctrl+S). If false: send live while typing with debounce."
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "collab-session.copySessionId",
          "when": "view == collabSessionUsers",
          "group": "navigation@1"
        },
        {
          "command": "collab-session.leaveSession",
          "when": "view == collabSessionUsers",
          "group": "navigation@2"
        },
        {
          "command": "collab-session.closeSession",
          "when": "view == collabSessionUsers",
          "group": "navigation@3"
        },
        {
          "command": "collab-session.sendFeedback",
          "when": "view == collabSessionAnswers",
          "group": "navigation@1"
        },
        {
          "command": "collab-session.showQuestion",
          "when": "view == collabSessionUsers",
          "group": "navigation@0"
        },
        {
          "command": "collab-session.sendAnswerFromFile",
          "when": "true"
        },
        {
          "command": "collab-session.loadQuestionFromFile",
          "when": "true"
        }        
      ],
      "editor/title": [
        {
          "command": "collab-session.sendAnswer",
          "when": "resourceExtname =~ /\\.(txt|md|py|js|ts|cpp|c|java|cs|rs|go|kt|swift)$/ && editorLangId",
          "group": "navigation@9"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",

    "server": "node server.js",
    "server:port": "cross-env COLLAB_PORT=3000 node server.js",
    "dev": "nodemon --watch server.js server.js",
    "db:check": "node db-check.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@types/ws": "^8.18.1",
    "@vscode/test-electron": "^2.3.10",
    "eslint": "^8.56.0",
    "glob": "^10.4.5",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3",
    "nodemon": "^3.1.0",
    "cross-env": "^7.0.3"
    },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "ws": "^8.18.3"
  }
}
